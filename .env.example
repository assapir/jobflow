# ===========================================
# Jobflow Production Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values
# NEVER commit the actual .env file to git

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=jobflow

# ===========================================
# JWT Authentication
# ===========================================
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_GENERATE_SECURE_SECRET
REFRESH_TOKEN_SECRET=CHANGE_ME_GENERATE_DIFFERENT_SECRET

# ===========================================
# LinkedIn OAuth (Optional)
# ===========================================
# Get these from LinkedIn Developer Portal
# https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# ===========================================
# SSL Certificate Email
# ===========================================
# Email for Let's Encrypt certificate notifications
ACME_EMAIL=your-email@example.com
