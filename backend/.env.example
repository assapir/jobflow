# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5434/jobflow

# LinkedIn OAuth 2.0
# Get these from https://www.linkedin.com/developers/
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=http://localhost:3002/api/auth/linkedin/callback

# JWT Secrets (generate secure random strings for production)
JWT_SECRET=your_jwt_secret_change_this_in_production
JWT_REFRESH_SECRET=your_refresh_secret_change_this_in_production

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:5173

# Server
PORT=3002

# Dev Auth Bypass
# Set to 'true' in .env.local to enable dev login without LinkedIn
# WARNING: Never enable this in production!
# DEV_AUTH_BYPASS=false

# ============================================
# LOCAL DEVELOPMENT SETUP:
# ============================================
# 1. Copy this file to .env:     cp .env.example .env
# 2. Add your LinkedIn credentials to .env
# 3. Create .env.local with:
#    DEV_AUTH_BYPASS=true
#    JWT_SECRET=local_dev_secret
#    JWT_REFRESH_SECRET=local_dev_refresh_secret
#
# .env.local is loaded first and overrides .env values
# Delete .env.local when you want to test real LinkedIn auth
