{
  "name": "jobo-backend",
  "version": "1.0.0",
  "description": "Job search management API",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dev": "tsx watch --env-file-if-exists=.env src/index.ts",
    "build": "tsc",
    "start": "node --env-file-if-exists=.env dist/index.js",
    "lint": "oxlint src/",
    "test": "node --import tsx --test 'src/__tests__/**/*.test.ts'",
    "test:integration": "node --import tsx --test 'src/__tests__/integration/*.ts'",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "crawlee": "^3.15.3",
    "drizzle-orm": "^0.44.7",
    "express": "^5.1.0",
    "playwright": "^1.57.0",
    "postgres": "^3.4.7",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "drizzle-kit": "^0.31.7",
    "oxlint": "^1.30.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
